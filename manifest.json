{
  "manifest_version": 3,
  "name": "Tweet Reformatter",
  "version": "1.0",
  "description": "A Chrome extension that adds a button to reformat tweets",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["content.js", "readInput.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
